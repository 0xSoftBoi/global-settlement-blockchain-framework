{
  "name": "global-settlement-blockchain-framework",
  "version": "1.0.0",
  "description": "Comprehensive blockchain research, compliance monitoring, and cross-chain testing framework",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "npm run test:monad-research && npm run test:compliance && npm run test:cross-chain",
    "test:monad-research": "jest monad-bft-research/tests",
    "test:compliance": "jest compliance-monitor/tests",
    "test:cross-chain": "jest cross-chain-testing/tests && forge test",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/*.integration.test.js'",
    "monad-research": "node monad-bft-research/src/index.js",
    "compliance-dashboard": "node compliance-monitor/dashboard/server.js",
    "test:cross-chain-run": "node cross-chain-testing/src/runner.js",
    "benchmark:consensus": "node monad-bft-research/benchmarks/consensus-benchmark.js",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "./scripts/setup.sh"
  },
  "keywords": [
    "blockchain",
    "compliance",
    "cross-chain",
    "monadbft",
    "settlement",
    "testing",
    "aml",
    "kyc",
    "institutional"
  ],
  "author": "Global Settlement",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "dotenv": "^16.4.1",
    "ethers": "^6.10.0",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "mongodb": "^6.3.0",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.9.0",
    "web3": "^4.3.0",
    "@openzeppelin/contracts": "^5.0.1",
    "graphql": "^16.8.1",
    "apollo-server-express": "^3.13.0",
    "joi": "^17.12.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^4.0.1",
    "bull": "^4.12.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/express": "^4.17.21",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.5",
    "solhint": "^4.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}